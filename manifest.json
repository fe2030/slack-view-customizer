{
  "manifest_version": 3,
  "name": "Slack View Customizer",
  "version": "1.0.0",
  "description": "Slackのヘッダーやナビゲーションバーを折りたたみ、メッセージ表示領域を広くする拡張機能",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["https://app.slack.com/*"],
      "css": ["styles.css"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
